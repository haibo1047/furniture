package ${package_name}.web;

import java.util.List;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;

import org.apache.shiro.SecurityUtils;
import com.ylsq.frame.common.base.BaseModelController;
import com.ylsq.frame.common.base.BaseExample;
import com.ylsq.frame.common.base.BaseModel;
import com.ylsq.frame.common.base.BaseService;
import com.ylsq.frame.common.base.ValidateResult;
import ${package_name}.dao.model.${model_name};
import ${package_name}.dao.model.${model_name}Example;
import ${package_name}.service.${model_name}Service;



/**
 * Created by Harper.
 */
@Controller
@RequestMapping("${tableName}")
public class ${model_name}Controller extends BaseModelController {
    private static final Logger log = LoggerFactory.getLogger(${model_name}Controller.class);
	
	@Autowired
	private ${model_name}Service ${modelVariable}Service;
	
	
	@Override
	public String list(@RequestParam(required = false, defaultValue = "1", value = "pageNum") int pageNum,ModelMap modelMap) {
		// TODO Auto-generated method stub
		int pageSize = (int)SecurityUtils.getSubject().getSession().getAttribute("pageSize");
		List<${model_name}> list = ${modelVariable}Service.selectByExampleForStartPage(new ${model_name}Example(),pageNum,pageSize);
		
		modelMap.put("modelList", list);
		modelMap.put("total", ${modelVariable}Service.countByExample(new ${model_name}Example()));
		return webPrefix() + "list";
	}
	
	protected ValidateResult validate(${model_name} model) {
		return ValidateResult.Passed;
	}
	
	@RequestMapping(value= "/save", method = RequestMethod.POST)
	public String save(${model_name} model,ModelMap modelMap) {
		log.debug(model.toString());
		initModel(model);
		
		ValidateResult vr = validate(model);
		if(!vr.isPassed()) {
			modelMap.put("model", model);
			modelMap.put("errorMsg", vr.getMsg());
			return webPrefix()+"edit";
		}
		if(model.getId() == null) {
			${modelVariable}Service.insert(model);
		}
		else {
			${modelVariable}Service.updateByPrimaryKey(model);
		}
		return list(modelMap);
	}
	
	@Override
	protected BaseService<? extends BaseModel, ? extends BaseExample> getService() {
		// TODO Auto-generated method stub
		return ${modelVariable}Service;
	}

	@Override
	protected List<? extends BaseModel> getModelList() {
		// TODO Auto-generated method stub
		List<${model_name}> list = ${modelVariable}Service.selectByExample(new ${model_name}Example());
		return list;
	}

	@Override
	protected String webPrefix() {
		// TODO Auto-generated method stub
		return super.webPrefix();
	}
}